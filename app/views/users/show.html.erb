<h2><%= @user.name%>Profile</h2>

<div class="row">
	<div class="col-xs-6 col-md-9">
		<div class="input-group">
			<span class="input-group-addon">User Login Name:</span>
			<span class="form-control"><%= @user.login%></span>
		</div>
		<div><p></p></div>
		<div class="input-group">
			<span class="input-group-addon">User Name:</span>
			<span class="form-control"><%= @user.name%></span>
		</div>
		<div><p></p></div>
		<div class="input-group">
			<span class="input-group-addon">User Email:</span>
			<span class="form-control"><%= @user.email%></span>
		</div>
		<div><p></p></div>
		<div class="input-group">
			<span class="input-group-addon">Gender:</span>
			<span class="form-control"><%= @user.gender%></span>
		</div>
		<div><p></p></div>
		<div class="input-group">
			<%= link_to "Edit your profile", edit_user_path, :class => "btn btn-danger"%>
		</div>
	</div>
	<div class="col-xs-6 col-md-3">
		<%= image_tag @user.avatar, :class => "img-thumbnail" %>
	</div>
</div>
<div><p></p></div>
<div class="row">
	<div class="col-md-4">
		<div class="list-group">
			<a href="#" class="list-group-item active">
		    <h4 class="list-group-item-heading">My favorite cafes list</h4>
		  </a>
			<% @user.shops.each do |sp|%>
			<a href="#" class="list-group-item">
		    <h6 class="list-group-item-heading"><%=sp.name%></h6>
		  </a>
			<% end %>
  	</div>
	</div>
	<div class="col-md-4">
		<div class="list-group">
		  <a href="#" class="list-group-item disabled">Meeting I accepted</a>
			<% @user.accepted_meetings.each do |meetingaccepted|%>
			<a href="#" class="list-group-item">
				<h6 class="list-group-item-heading"><%=meetingaccepted.meeting_date_time%>
					<STRONG>@</STRONG> <%=meetingaccepted.shop.name%> <STRONG> with </STRONG> <%=meetingaccepted.organizer.name%></h6>
			</a>
			<% end %>

		</div>
	</div>
	<div class="col-md-4">
		<div class="list-group">
		  <a href="#" class="list-group-item disabled">Meeting I created</a>

			<% @user.meetings.each do |meeting|%>
				<% if meeting.readed == true %>
				<a href="#" class="list-group-item">
			    <h6 class="list-group-item-heading"><%=meeting.meeting_date_time%>
						<STRONG>@</STRONG> <%=meeting.shop.name%> <STRONG> with </STRONG> <%=meeting.acceptor.name%>
						<i class="fa fa-check-square-o "></i></h6>
			  </a>
				<% else %>
				<a href="#" class="list-group-item">
			    <h6 class="list-group-item-heading"><%=meeting.meeting_date_time%>
						<STRONG>@</STRONG> <%=meeting.shop.name%></h6>
			  </a>
				<% end %>
			<% end %>
		</div>
	</div>
</div>
