<div class="row">
    <div class="col-sm-5">
        <div>
            <%= image_tag @shop.image, :class => "img-thumbnail" %>
        </div>

        <div class="panel panel-success">
            <div class="panel-heading">
                Meet someone here
            </div>
            <div class="panel-body">
                <%= form_tag("/Create Event", method: "get") do %>
                <div class="form-group">
                    <div class='input-group date' id='meetingDate'>
                        <input type='text' class="form-control"/>
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-calendar"></span>
                        </span>
                    </div>
                </div>
                <div class="input-group pull-right">
                    <%= submit_tag("Create Event", class: "btn btn-default") %>
                </div>
                <% end %>
            </div>
        </div>

    </div>
    <div class="col-sm-4">
        <div class="panel-warning">
            <div class="panel-heading">
                <h3><%= @shop.name %></h3>
            </div>
            <div class="panel-body">
                Address:
                <%= @shop.address %>
            </div>
            <div class="panel-body">
                Phone:
                <%= @shop.phone %>
            </div>
            <div class="panel-body">
                Website:
                <%= @shop.website %>
            </div>
            <div class="panel-body">
                latitude:
                <%= @shop.latitude %>
            </div>
            <div class="panel-body">
                longitude:
                <%= @shop.longitude %>
            </div>
        </div>
    </div>
    <div class="col-sm-3">
        <%= image_tag "https://maps.googleapis.com/maps/api/staticmap?zoom=13&size=300x300&maptype=roadmap%20&markers=#{@shop.latitude},#{@shop.longitude} "%>
    </div>
</div>


<script type="text/javascript">
    $(function () {
        $('#meetingDate').datetimepicker();
    });
</script>
