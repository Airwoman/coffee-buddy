<div>

<div class="col-sm-4 col-sm-offset-2 col-md-3 col-md-offset-0">
  <div class="col-sm-12 ">
      <a href="#" class="list-group-item disabled">
          <h5>Top Cafes</h5>
      </a>
      <% @products.each do |product|%>
      <a href="#" class="list-group-item"><%= product.name %></a>
      <% end %>
  </div>
</div>

<% @shops.in_groups_of(4).each do |group| %>
<div class='col-md-9'>
    <% group.each do |shop| %>
    <div class="col-sm-8 col-md-3">
        <div class="thumbnail">
            <a href=<%= shopshow_path(shop.id) %>><%= image_tag shop.image %></a>
            <div class="caption">
                <h5><%= shop.name %></h5>
                <!-- <button type="button" class="btn btn-warning-outline">
                    <span class="glyphicon glyphicon-heart-empty" aria-hidden="true"></span>
                </button>
                <button type="button" class="btn btn-warning-outline">
                    <span class="glyphicon glyphicon-heart" aria-hidden="true"></span>
                </button> -->
                <% if current_user && current_user.shops.find_by(id: shop.id) %>
                  <%= link_to unlike_path(shop_id: shop.id), method: :patch do %>
                    <span class="glyphicon glyphicon-heart" aria-hidden="true"></span>
                  <% end%>
                <% else %>
                  <%= link_to like_path(shop_id: shop.id), method: :patch do %>
                    <span class="glyphicon glyphicon-heart-empty" aria-hidden="true"></span>
                  <% end %>
                <% end %>

                <%= shop.casein_admin_users.count %> likes
                <!-- <button type="button" class="btn btn-warning-outline">
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                </button>
                <button type="button" class="btn btn-warning-outline">
                    <span class="glyphicon glyphicon-pushpin" aria-hidden="true"></span>
                </button> -->
            </div>
        </div>
    </div>
    <% end %>
</div>
<% end %>

</div>
