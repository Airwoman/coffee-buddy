<!-- Scaffolding generated by Casein v5.1.1.5 -->

<table class="table table-striped table-hover table-condensed">
	<thead>
		<tr>
			<th><%= casein_sort_link "Name", :name %></th>
			<th><%= casein_sort_link "Address", :address %></th>
			<th><%= casein_sort_link "Phone", :phone %></th>
			<th><%= casein_sort_link "Website", :website %></th>
			<th>&nbsp;</th>
		</tr>
	</thead>
	
	<% shops.each do |shop| %>
		<tr>
			<td><%= casein_table_cell_link shop.name, casein_shop_path(shop) %></td>
			<td><%= casein_table_cell_link shop.address, casein_shop_path(shop) %></td>
			<td><%= casein_table_cell_link shop.phone, casein_shop_path(shop) %></td>
			<td><%= casein_table_cell_link shop.website, casein_shop_path(shop) %></td>
			<td class="delete">
				<%= link_to(casein_show_row_icon("trash"), casein_shop_path(shop), :method => :delete, :data => { :confirm => "Are you sure you want to delete this shop?" }) %>
			</td>
		</tr>
	<% end %>
</table>