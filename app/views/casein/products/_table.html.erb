<!-- Scaffolding generated by Casein v5.1.1.5 -->

<table class="table table-striped table-hover table-condensed">
	<thead>
		<tr>
			<th><%= casein_sort_link "Name", :name %></th>
			<th><%= casein_sort_link "Ingredient", :ingredient %></th>
			<th><%= casein_sort_link "Description", :description %></th>
			<th><%= casein_sort_link "coffee_image", :coffee_image %></th>
			<th>&nbsp;</th>
		</tr>
	</thead>

	<% products.each do |product| %>
		<tr>
			<td><%= casein_table_cell_link product.name, casein_product_path(product) %></td>
			<td><%= casein_table_cell_link product.ingredient, casein_product_path(product) %></td>
			<td><%= casein_table_cell_link product.description, casein_product_path(product) %></td>
			<td><%= casein_table_cell_link product.coffee_image, casein_product_path(product) %></td>

			<td class="delete">
				<%= link_to(casein_show_row_icon("trash"), casein_product_path(product), :method => :delete, :data => { :confirm => "Are you sure you want to delete this product?" }) %>
			</td>
		</tr>
	<% end %>
</table>
